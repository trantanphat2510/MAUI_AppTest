<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationPhotoApp.MainPage"
             BackgroundColor="#f8f9fa">

    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="20"
          RowSpacing="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Location Photo App" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#1e88e5"/>
            <Label Text="Chụp ảnh và chia sẻ vị trí của bạn" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="#757575"/>
            <BoxView HeightRequest="1" 
                     BackgroundColor="#e0e0e0" 
                     HorizontalOptions="Fill"
                     Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              RowDefinitions="*,Auto,Auto" 
              RowSpacing="15">
            <!-- Image Display -->
            <Border x:Name="photoBorder"
                    Grid.Row="0"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 12"
                    Background="White"
                    Margin="0,10"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="5,5"
                            Opacity="0.3"
                            Radius="8"/>
                </Border.Shadow>
                <Grid>
                    <Image x:Name="photoImage"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"/>
                    <Label x:Name="photoPlaceholder"
                           Text="Chưa có ảnh" 
                           TextColor="#9e9e9e"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"/>
                </Grid>
            </Border>

            <!-- Location Display -->
            <Border x:Name="locationBorder"
                    Grid.Row="1"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 8"
                    Background="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="4,4"
                            Opacity="0.25"
                            Radius="6"/>
                </Border.Shadow>
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Image Source="location_pin.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"/>
                    <Label x:Name="locationLabel"
                           Text="Vị trí: Chưa xác định"
                           VerticalOptions="Center"
                           TextColor="#424242"
                           FontSize="15"/>
                </StackLayout>
            </Border>

            <!-- Status Message -->
            <Border x:Name="statusBorder"
                    Grid.Row="2"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 8"
                    Background="White"
                    Padding="15">
                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="4,4"
                            Opacity="0.25"
                            Radius="6"/>
                </Border.Shadow>
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Image Source="status_icon.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"/>
                    <Label x:Name="statusLabel"
                           Text="Sẵn sàng chụp ảnh"
                           VerticalOptions="Center"
                           TextColor="#424242"
                           FontSize="15"/>
                </StackLayout>
            </Border>
        </Grid>

        <!-- Footer with Camera Button and QR Button -->
        <VerticalStackLayout Grid.Row="2" 
                            Spacing="10" 
                            HorizontalOptions="Center">
            <Border x:Name="takePhotoButtonBorder"
                    WidthRequest="60"
                    HeightRequest="60"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 20"
                    Background="#1e88e5"
                    HorizontalOptions="Center">
                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="3,3"
                            Opacity="0.3"
                            Radius="5"/>
                </Border.Shadow>
                <Button x:Name="takePhotoButton"
                        BackgroundColor="Transparent"
                        Clicked="OnTakePhotoClicked"
                        ImageSource="https://cdn3.iconfinder.com/data/icons/linecons-free-vector-icons-pack/32/camera-1024.png"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
            </Border>

            <!-- QR Code Button and Result Label -->
            <Button Text="Quét mã QR" 
                    Clicked="OnScanQRCodeClicked"
                    BackgroundColor="#1e88e5"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="10"
                    WidthRequest="150"/>
            <Label x:Name="qrResultLabel" 
                   Text="Nội dung QR sẽ hiển thị ở đây"
                   TextColor="#424242"
                   FontSize="14"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>