<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationPhotoApp.MainPage"
             BackgroundColor="#f8f9fa">

    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="20"
          RowSpacing="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Location Photo App" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#1e88e5"/>

            <Label Text="Chụp ảnh và chia sẻ vị trí của bạn" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="#757575"/>

            <BoxView HeightRequest="1" 
                     BackgroundColor="#e0e0e0" 
                     HorizontalOptions="Fill"
                     Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <!-- Main Content -->
        <Grid Grid.Row="1" 
              RowDefinitions="*,Auto,Auto" 
              RowSpacing="15">

            <!-- Image Display -->
            <Border Grid.Row="0"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 12"
                    Background="White"
                    Margin="0,10"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    Shadow="Medium">

                <Grid>
                    <Image x:Name="photoImage"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"/>

                    <Label x:Name="photoPlaceholder"
                           Text="Chưa có ảnh" 
                           TextColor="#9e9e9e"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"/>
                </Grid>
            </Border>

            <!-- Location Display -->
            <Border Grid.Row="1"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 8"
                    Background="White"
                    Padding="15"
                    Shadow="Medium">

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Image Source="location_pin.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"/>

                    <Label x:Name="locationLabel"
                           Text="Vị trí: Chưa xác định"
                           VerticalOptions="Center"
                           TextColor="#424242"
                           FontSize="15"/>
                </StackLayout>
            </Border>

            <!-- Status Message -->
            <Border Grid.Row="2"
                    Stroke="#e0e0e0"
                    StrokeShape="RoundRectangle 8"
                    Background="White"
                    Padding="15"
                    Shadow="Medium">

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Image Source="status_icon.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"/>

                    <Label x:Name="statusLabel"
                           Text="Sẵn sàng chụp ảnh"
                           VerticalOptions="Center"
                           TextColor="#424242"
                           FontSize="15"/>
                </StackLayout>
            </Border>
        </Grid>

        <!-- Footer with Camera Button -->
        <Border Grid.Row="2"
                WidthRequest="60"
                HeightRequest="60"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 20"
                Background="#1e88e5"
                Shadow="Medium"
                HorizontalOptions="Center">

            <Button x:Name="takePhotoButton"
                    BackgroundColor="Transparent"
                    Clicked="OnTakePhotoClicked"
                    ImageSource="https://cdn3.iconfinder.com/data/icons/linecons-free-vector-icons-pack/32/camera-1024.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
        </Border>
    </Grid>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Các resource có thể được thêm vào đây nếu cần -->
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
