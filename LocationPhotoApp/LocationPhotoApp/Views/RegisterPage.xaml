<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationPhotoApp.Views.RegisterPage"
             Title="RegisterPage">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Entry x:Name="fullNameEntry" Placeholder="Họ và tên" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Số điện thoại" Keyboard="Telephone" />
        <Entry x:Name="passwordEntry" Placeholder="Mật khẩu" IsPassword="True" />
        <Entry x:Name="confirmPasswordEntry" Placeholder="Xác nhận mật khẩu" IsPassword="True" />
        <Button Text="Đăng ký" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>