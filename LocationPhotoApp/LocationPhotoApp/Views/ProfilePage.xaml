<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationPhotoApp.Views.ProfilePage"
             Title="ProfilePage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Họ và tên:" FontAttributes="Bold" />
        <Label x:Name="fullNameLabel" />

        <Label Text="Email:" FontAttributes="Bold" />
        <Label x:Name="emailLabel" />

        <Label Text="Số điện thoại:" FontAttributes="Bold" />
        <Label x:Name="phoneLabel" />

        <Label Text="Ngày tạo tài khoản:" FontAttributes="Bold" />
        <Label x:Name="createdAtLabel" />

        <Button Text="Đăng xuất"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="LogoutButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
